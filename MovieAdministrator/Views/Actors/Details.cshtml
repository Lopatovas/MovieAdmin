@model MovieAdministrator.Models.Actor

@{
    ViewData["Title"] = "Actor info";
}

<h2>Details</h2>

<div>
	<h4>@Model.FullName</h4>
    <hr />
	<div class="row">
		<dl class="dl-horizontal">
			<dt>General information:</dt>
			<dd></dd>
			<dt>
				@Html.DisplayNameFor(model => model.Gender)
			</dt>
			<dd>@Model.Gender</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Age)
			</dt>
			<dd>@Model.Age</dd>
		</dl>
		<hr />
		<dl class="dl-horizontal">
			<dt>Movie enrollments:</dt>
			@foreach (var item in Model.Casts){
				<dd>@Html.DisplayFor(modelItem => item.Movie.Title)</dd> }
		</dl>
	</div>
</div>
<div>
	<br />
	<a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.ID"><span class="glyphicon glyphicon-edit" /></a>
	<a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.ID"><span class="glyphicon glyphicon-trash" /></a>
	<a asp-action="Index" class="btn btn-primary">Return</a>
</div>
