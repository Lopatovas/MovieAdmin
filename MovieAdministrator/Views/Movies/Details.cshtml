@model MovieAdministrator.Models.Movie

@{
    ViewData["Title"] = "Movie info";
}

<h2>Details</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
	<div class="row">
		<dl class="dl-horizontal">
			<dt>General information:</dt>
			<dd></dd>
			<dt>
				@Html.DisplayNameFor(model => model.ReleaseDate)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.ReleaseDate)
			</dd>
			<dt>
				@Html.DisplayNameFor(model => model.Genre)
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Genre.Name)
			</dd>		
		</dl>
		<hr />
		<dl class="dl-horizontal">
			<dt>Actors:</dt>
				@foreach (var item in Model.Casts){
			<dd>@Html.DisplayFor(modelItem => item.Actor.FullName)</dd>
				}
		</dl>
	</div>
</div>
<div>
	<a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.ID"><span class="glyphicon glyphicon-edit" /></a>
	<a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.ID"><span class="glyphicon glyphicon-trash" /></a>
	<a asp-action="Index" class="btn btn-primary">Return</a>
</div>
