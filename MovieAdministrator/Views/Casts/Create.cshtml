@model MovieAdministrator.Models.Cast

@{
    ViewData["Title"] = "Cast creation";
}

<h2>Casting</h2>

<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ActorID" class="control-label"></label>
				<select asp-for="ActorID" class="form-control" asp-items="ViewBag.ActorID"></select>
				<span asp-validation-for="ActorID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MovieID" class="control-label"></label>
				<select asp-for="MovieID" class="form-control" asp-items="ViewBag.MovieID"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
				<a asp-controller="Casts" asp-action="Index" asp-route-id="@ViewBag.Movie.ID" class="btn btn-primary">Return</a>
			</div>
		</form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
